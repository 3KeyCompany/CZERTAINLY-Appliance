    cp /cdrom/CZERTAINLY/czertainly.yml /target/etc/ansible/playbooks && \
    cp /cdrom/CZERTAINLY/ansible-init.sh /target/etc/ansible/ && \
    cp /cdrom/CZERTAINLY/customize4developer.sh /target/usr/local/bin/ && \
    cp /cdrom/CZERTAINLY/czertainly-tui.sh /target/usr/local/bin/ && \
    cp /cdrom/CZERTAINLY/czertainly-status.sh /target/usr/local/bin/ && \
